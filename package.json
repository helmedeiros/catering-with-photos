{
  "name": "catering-with-photos",
  "version": "1.0.0",
  "description": "Chrome extension that enhances Z-Catering menu with food images",
  "type": "module",
  "scripts": {
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:e2e": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js tests/chrome.test.js",
    "test:unit": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js tests/dom-utils.test.js"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "jest": "^29.7.0",
    "puppeteer": "^24.8.0",
    "eslint": "^9.26.0",
    "prettier": "^3.5.3",
    "cross-env": "^7.0.3",
    "jest-puppeteer": "^11.0.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "projects": [
      {
        "displayName": "Unit Tests",
        "testEnvironment": "jsdom",
        "testMatch": ["<rootDir>/tests/dom-utils.test.js"]
      },
      {
        "displayName": "E2E Tests",
        "preset": "jest-puppeteer",
        "testMatch": ["<rootDir>/tests/chrome.test.js"]
      }
    ]
  }
}
